{
  "name": "uesrpg-companion",
  "description": "Companion app for running UESRPG",
  "author": "jamesj.tb",
  "version": "0.3.0",
  "private": true,
  "main": "./electron/electron.js",
  "homepage": "./",
  "dependencies": {
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@fontsource/alegreya": "^4.5.8",
    "@fontsource/roboto": "^4.5.8",
    "@mui/icons-material": "^5.10.3",
    "@mui/material": "^5.10.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.4.3",
    "array-sort": "^1.0.0",
    "axios": "^0.27.2",
    "electron-is-dev": "^2.0.0",
    "electron-window-state": "^5.0.3",
    "immer": "^9.0.15",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "uuid": "^8.3.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build-react": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently -k \"set BROWSER=none&& npm start\" \"npm:electron\"",
    "electron": "wait-on tcp:3000 && electron .",
    "pack": "mkdir build\\src & robocopy src\\shared build\\src\\shared /s & robocopy electron build\\electron /s",
    "build-electron": "electron-builder build --win -c.extraMetadata.main=build/electron/electron.js --publish never"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.3.0",
    "electron": "^20.1.1",
    "electron-builder": "^23.3.3",
    "electron-devtools-installer": "^3.2.0",
    "wait-on": "^6.0.1"
  },
  "build": {
    "extends": null,
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "installerIcon": "build/icon.ico",
      "oneClick": "false",
      "perMachine": "false",
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "UESRPG Companion"
    }
  }
}
